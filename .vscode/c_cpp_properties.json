{
    "configurations": [
        {
            "name": "ESP-IDF",
            "compilerPath": "${config:C_Cpp.default.compilerPath}",
            "includePath": [
                "${default}",
                "${config:idf.espIdfPath}/components/**",
                "${workspaceFolder}/**"
            ],
            "browse": {
                "path": [
                    "${config:idf.espIdfPath}/components",
                    "${workspaceFolder}"
                ],
                "limitSymbolsToIncludedHeaders": false
            },
            "compileCommands": "${workspaceFolder}/build/compile_commands.json"
        }
    ],
    "version": 4
}
